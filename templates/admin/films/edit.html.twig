{% extends 'base.html.twig' %}

{% block title %}Modifier le Film{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg">
                    <div class="card-header text-dark text-center">
                        <h2>Modifier le film : {{ film.title }}</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3 form-check">
                                {{ form_widget(form.crush, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.crush, 'Coup de cœur', {'label_attr': {'class': 'form-check-label'}}) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.director, 'Réalisateur', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.director, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Genres</label>
                                <div class="d-flex flex-wrap">
                                    {% for genre in form.genres %}
                                        <div class="form-check me-3">
                                            {{ form_widget(genre, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(genre, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.imageFile, 'Image du film', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                            </div>

                            {% if film.imageName %}
                                <div class="mb-3 text-center">
                                    <img src="{{ asset('images/Film/' ~ film.imageName) }}" alt="Image actuelle" class="img-fluid rounded shadow-sm" style="max-height: 300px;">
                                    <p class="mt-2 text-muted">Image actuelle</p>
                                </div>
                            {% endif %}

                            <button type="submit" class="btn btn-success w-100">Sauvegarder</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
