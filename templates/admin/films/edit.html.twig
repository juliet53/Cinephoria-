{% extends 'base.html.twig' %}

{% block title %}Modifier le Film{% endblock %}

{% block body %}
    <div class="container-fluid px-1 mt-2 mt-md-5">
        <div class="row justify-content-center">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card card-add shadow-lg">
                    <div class="card-header text-dark text-center py-2 py-md-3">
                        <h2 class="mb-0 fs-4 fs-md-2">Modifier le film : {{ film.title }}</h2>
                    </div>
                    <div class="card-body p-2 p-sm-3 p-md-4">
                        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                            <div class="mb-2 mb-md-3">
                                {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-sm form-control-md-lg'}}) }}
                            </div>
                             
                            <div class="mb-2 mb-md-3">
                                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'form-control form-control-sm form-control-md-lg'}}) }}
                            </div>
                             
                            <div class="mb-2 mb-md-3 form-check">
                                {{ form_widget(form.crush, {'attr': {'class': 'form-check-input'}}) }}
                                {{ form_label(form.crush, 'Coup de cœur', {'label_attr': {'class': 'form-check-label fw-bold'}}) }}
                            </div>
                             
                            <div class="mb-2 mb-md-3">
                                {{ form_label(form.director, 'Réalisateur', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.director, {'attr': {'class': 'form-control form-control-sm form-control-md-lg'}}) }}
                            </div>
                             
                            <div class="mb-2 mb-md-3">
                                <label class="form-label fw-bold">Genres</label>
                                <div class="d-flex flex-wrap">
                                    {% for genre in form.genres %}
                                        <div class="form-check me-2 me-md-3 mb-1">
                                            {{ form_widget(genre, {'attr': {'class': 'form-check-input'}}) }}
                                            {{ form_label(genre, null, {'label_attr': {'class': 'form-check-label'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                             
                            <div class="mb-2 mb-md-3">
                                {{ form_label(form.imageFile, 'Image du film', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.imageFile, {'attr': {'class': 'form-control form-control-sm form-control-md-lg'}}) }}
                            </div>
                             
                            {% if film.imageName %}
                                <div class="mb-3 mb-md-4 text-center">
                                    <img src="{{ asset('images/Film/' ~ film.imageName) }}" alt="Image actuelle" class="img-fluid rounded shadow-sm" style="max-height: 200px; max-height: 300px;">
                                    <p class="mt-2 text-muted small">Image actuelle</p>
                                </div>
                            {% endif %}
                             
                            <div class="d-grid">
                                <button type="submit" class="btn btn-success btn-sm btn-md-lg py-2 py-md-3">Sauvegarder</button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}