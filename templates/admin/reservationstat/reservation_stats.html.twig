{% extends 'base.html.twig' %}

{% block title %}Statistiques des réservations - Admin{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Statistiques des réservations (7 derniers jours)</h1>
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="card-title">Résumé</h5>
                <p><strong>Total des réservations :</strong> {{ stats.total_reservations }}</p>
                <p><strong>Total des tickets :</strong> {{ stats.total_tickets }}</p>
                <p><strong>Revenu total :</strong> {{ stats.total_revenue|number_format(2, ',', ' ') }} €</p>
            </div>
        </div>

        <h2>Réservations par film</h2>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Film</th>
                    <th>Nombre de tickets</th>
                    <th>Revenu (€)</th>
                </tr>
            </thead>
            <tbody>
                {% for filmId, data in stats.reservations_by_film %}
                    <tr>
                        <td>{{ data.title }}</td>
                        <td>{{ data.tickets }}</td>
                        <td>{{ data.revenue|number_format(2, ',', ' ') }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucune réservation trouvée.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        
    </div>
{% endblock %}