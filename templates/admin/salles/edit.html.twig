{% extends 'base.html.twig' %}

{% block title %}Modifier la Salle{% endblock %}

{% block body %}
    <div class="container-fluid container-lg mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="card card-add shadow-lg">
                    <div class="card-header text-black text-center">
                        <h2>Modifier la Salle {{ salle.numero }} de {{ salle.cinema.nom }}</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.numero, 'Numéro', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.numero, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.numero) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.capacite, 'Capacité', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.capacite, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.capacite) }}
                            </div>

                            <div class="mb-3">
                                {{ form_label(form.cinema, 'Cinéma', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.cinema, {'attr': {'class': 'form-control'}}) }}
                                {{ form_errors(form.cinema) }}
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('admin_salles_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Retour
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Enregistrer
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}