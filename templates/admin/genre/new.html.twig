{% extends 'base.html.twig' %}

{% block title %}Ajouter un Genre{% endblock %}

{% block body %}
    <div class="container-fluid container-lg mt-5">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="card card-add shadow-lg">
                    <div class="card-header text-black text-center">
                        <h2>Ajouter un Nouveau Genre</h2>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                            <div class="mb-3">
                                {{ form_label(form.nom, 'Nom du Genre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du genre'}}) }}
                                {{ form_errors(form.nom) }}
                            </div>
                            <div class="d-flex justify-content-between mt-4">
                                <a href="{{ path('admin_genre_index') }}" class="btn btn-secondary">
                                    <i class="fas fa-arrow-left"></i> Retour
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Ajouter
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}