{% extends 'base.html.twig' %}

{% block title %}Ajouter un Genre{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 fw-bold  ">Ajouter un Nouveau Genre</h1>

        <div class="card shadow-lg p-4 mx-auto" style="max-width: 600px;">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez le nom du genre'}}) }}
                        {{ form_errors(form.nom) }}
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success btn-lg px-4 ">Ajouter</button>
                        <a href="{{ path('admin_genre_index') }}" class="btn btn-outline-secondary btn-lg px-4">Retour Ã  la liste</a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}