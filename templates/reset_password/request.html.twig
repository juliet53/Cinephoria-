{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-6">

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h1 class="h3 mb-3 text-center">Réinitialiser votre mot de passe</h1>

            {{ form_start(requestForm, {'attr': {'data-turbo': 'false'}}) }}

                <div class="mb-3">
                    {{ form_row(requestForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse e-mail'}}) }}
                </div>

                <div class="mb-3 text-center">
                    <small>
                        Entrez votre adresse e-mail, et nous vous enverrons
                        un lien pour réinitialiser votre mot de passe.
                    </small>
                </div>

                <div class="text-center">
                    <button class="btn btn-lg btn-primary w-100" type="submit">Envoyer l'e-mail de réinitialisation</button>
                </div>

            {{ form_end(requestForm) }}

            <div class="mt-3 text-center">
                <a href="{{ path('app_login') }}" class="text-primary text-decoration-underline">Retour à la connexion</a>
            </div>

        </div>
    </div>
</div>
{% endblock %}
